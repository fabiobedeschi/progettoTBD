<% if books.size > 0 %>
  <div class="col-auto">
    <nav class="nav nav-pills" id="order-by">
      <a class="nav-link disabled" aria-disabled="true">Order by:</a>
      <%= link_to 'Title', params.merge(order: 'title', ad: 'asc').permit(:order, :ad), class: "nav-link"%>
      <%= link_to 'Year', params.merge(order: 'year', ad: 'asc').permit(:order, :ad), class: "nav-link" %>
      <%= link_to 'Last added', params.merge(order: 'created_at', ad: 'desc').permit(:order, :ad), class: "nav-link" %>
      <%= link_to 'Last updated', params.merge(order: 'updated_at', ad: 'desc').permit(:order, :ad), class: "nav-link" %>
    </nav>
  </div>

  <div class="col mr-3 text-right align-self-center">
    <% (val, cls) = (params[:ad].eql? 'asc') ? %w[desc down] : %w[asc down-alt]%>
    <%= link_to '', params.merge(order: params[:order], ad: val).permit(:order, :ad), class: "fas fa-sort-alpha-#{cls}"%>
  </div>

  <div class="w-100"></div>

  <% count = 1 %>
  <% books.each do |book| %>
    <div class="col col-lg-6 my-2">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= link_to book.title, book %></h4>
          <div class="row justify-content-between">
            <h6 class="card-subtitle mb-1 col-auto font-italic">
              <%= book.author.nil? ? 'Unknown author' : (link_to book.author.name, book.author) %>
            </h6>
            <h6 class="card-subtitle mb-1 col-auto"><%= string_year(book) %></h6>
          </div>
          <p class="card-text text-truncate"><%= book.plot %></p>
        </div>
      </div>
    </div>
    <% if count % 2 == 0 %>
      <div class="w-100"></div>
    <% else %>
      <div class="w-100 d-lg-none"></div>
    <% end; count+=1 %>
  <% end %>
<% end %>