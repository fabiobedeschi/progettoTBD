<section id="section-book-show">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1 class="display-1"><%= @book.title %></h1>
      </div>
      <div class="col-2 text-center">
        <%= button_to 'Edit Book', edit_book_path(@book), method: 'get', class: 'btn btn-primary mt-5' %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <ul class="list-group list-group-horizontal-md justify-content-end">
          <li class="list-group-item border-0 h3"><%= string_date(@book.dop) %></li>
        </ul>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col">
        <p><%= @book.plot %></p>
      </div>
    </div>
  </div>
</section>
