<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to 'Library Manager', root_path, class: 'navbar-brand' %>
    <% if logged_in? %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item ">
          <%= link_to 'Library', library_path(@user.library), class: 'nav-link' %>
        </li>
        <li class="nav-item ">
          <%= link_to 'Books', books_path, class: 'nav-link' %>
        </li>
        <li class="nav-item ">
          <%= link_to 'Authors', authors_path, class: 'nav-link' %>
        </li>
      </ul>

      <span class="navbar-text w-100">
        <div class="row justify-content-end">
          <div class="col-auto align-self-center">
            <% cls = @user.is_admin ? 'primary' : 'secondary' %>
<!--            <span class="badge badge-<%#=cls%>">-->
              <%= link_to (@user.is_admin ? @user.username + ' (admin)' : @user.username),
                          library_path(@user.library), class: "badge badge-#{cls} color-white"%>
              <%#= @user.is_admin ? @user.username + ' (admin)' : @user.username %>
<!--            </span>-->
          </div>
          <div class="col-auto">
            <%= link_to 'Logout', logout_path%>
          </div>
        </div>

      </span>
    </div>
    <% end %>
  </nav>

</header>