<section id="section-library-index">
  <div class="row justify-content-between">
    <div class="col-auto">
      <%= render 'layouts/display_title', {title: 'Libraries index'} %>
    </div>
    <div class="col text-right align-self-center">
      <%= link_to 'Go to my library', library_path(@user.library), class: 'btn btn-primary' %>
    </div>
  </div>

  <hr>

  <div class="row">
    <%= render 'libraries/grid', {libraries: @libraries}%>
  </div>
</section>
