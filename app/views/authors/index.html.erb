<section id="section-author-index">
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-12 col-md-auto">
        <h1 class="display-1">Authors index</h1>
      </div>
      <div class="col-auto text-center">
        <%= button_to 'Add Author', new_author_path, method: 'get', class: 'btn btn-primary mt-md-5' %>
      </div>
    </div>
    <hr>
    <div class="row">
      <% count = 1 %>
      <% @authors.each do |author| %>
        <div class="col col-md-6 my-1">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= link_to author.name, author %></h5>
              <div class="row">
                <h6 class="card-subtitle mb-1 col text-right"><%= string_dob_dod author %></h6>
              </div>
              <p class="card-text text-truncate"><%= author.bio %></p>
            </div>
          </div>
        </div>
        <% if count % 2 == 0 %>
          <div class="w-100"></div>
        <% else %>
          <div class="w-100 d-md-none"></div>
        <% end; count+=1 %>
      <% end %>
    </div>
  </div>
</section>
