<section id="section-author-show">
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-12 col-md-auto">
        <h1 class="display-1"><%= @author.name %></h1>
      </div>
      <div class="col-auto text-center">
        <%= button_to 'Edit Author', edit_author_path(@author), method: 'get', class: 'btn btn-primary mt-md-5' %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <ul class="list-group list-group-horizontal-md justify-content-end">
          <li class="list-group-item border-0 h3"><%= string_dob_dod @author %></li>
        </ul>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col">
        <p><%= @author.bio %></p>
      </div>
    </div>
  </div>
</section>
